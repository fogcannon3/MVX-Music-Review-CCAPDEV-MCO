<link rel="stylesheet" href="/css/home.css">

<header class="header">
    <h2 class="header_title"><span>MVX</span></h2>
    <div class="header_search">
        <input type="text" placeholder="Search">
        <button type="submit"><i class="fa fa-search"></i></button>
    </div>
    <nav id="header_navigation" class="header_navigation">
        <i class="fa fa-bell"></i>
        <a href="/home" class="">Home</a>
        <a href="/profile" class="">Profile</a>
    </nav>   
</header>

<div class="container">
    <h1 id="title">Home</h1>
    <hr>
    <div class = "filters">
        <h2 class="filterTitle">Songs</h2>
        <div class = "filterActual">
            <button class= "filter">
                <p>Following</p>
            <button class= "filter">
                <p>Philippines</p>
            <button class= "filter">
                <p>World</p>
        </div>
    </div>

    <!-- TESTING WITH SONGS ONLY FOR NOW -->
    <div id="items">
        <% songdata.forEach(element => { %>
            <div class="item"><a href="/song/:id">
                <img src = <%= element.song_img%>>
                <h2><%= element.song_title %></h2>
                <p><%= element.song_artist %></p>
            </a></div>
        <% }) %>
    </div>

    <br>

    <div class = "filters">
        <h2>Albums</h2>
        <div class = "filterActual">
            <button class= "filter">
                <p>Upbeat</p>
            <button class= "filter">
                <p>Danceable</p>
            <button class= "filter">
                <p>"soty"</p>
        </div>
    </div>

    <div id="items">
        <% albumdata.forEach(element => { %>
            <div class="item"><a href="/album/:id">
                <img src = <%= element.album_img%>>
                <h2><%= element.album_title %></h2>
                <p><%= element.album_artist %></p>
            </a></div>
        <% }) %>
    </div>


    <br>

    <div class = "filters">
        <h2>Artists</h2>
        <div class = "filterActual">
            <button class= "filter">
                <p>City</p>
            <button class= "filter">
                <p>Country</p>
            <button class= "filter">
                <p>World</p>
        </div>
    </div>

    <div id="items">
        <% artistdata.forEach(element => { %>
            <div class="item"><a href="/artist/:id">
                <img src = <%= element.artist_img%>>
                <h2><%= element.artist_name %></h2>
            </a></div>
        <% }) %>
    </div>

    <br>

    <div class = "filters">
        <h2>Record Labels</h2>
        <div class = "filterActual">
            <button class= "filter">
                <p>City</p>
